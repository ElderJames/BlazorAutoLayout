@page "/counter"

@inherits StatefulComponentBase

<PageTitle>Counter</PageTitle>

<h1>SSR Interactivity</h1>

<p role="status">Current count: @currentCount</p>

<FormButton class="btn btn-primary" OnClick="IncrementCount">Click me</FormButton>

<p role="status">Current2 count: @currentCount2</p>

<FormButton class="btn btn-primary" OnClick="IncrementCount2">Click me 2</FormButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private int currentCount2 = 0;

    private void IncrementCount2()
    {
        currentCount2++;
    }
}
